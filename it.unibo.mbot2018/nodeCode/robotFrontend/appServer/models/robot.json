{
  "id": "http://localhost:8080",
  "name": "Unibo Robot front-end",
  "description": "A front-end for controlling a drr robot.",
  "customFields": {
    "hostname":"localhost",
    "port": 8080,
    "secure": false,
    "dataArraySize" : 40
   }, 
  "help": {
    "link": "http://infolab.ingce.unibo.it/iss2018/it.unibo.issMaterial/issdocs/Material/LectureCesena1819.html",
    "title": "Documentation"
  },
  "links": {
	"robot": {
	    "name": "UniboDdrRobot",
	    "link": "/robot",
	    "description": "A simple robot model",
		"resources":{
	    "robotstate":{
	    	"link": "/robotstate",
	    	"state": "stopped"
	    },
	    "robotdevices":{
	    	"link": "/robotdevices",
	    	"resources":{
			    "sonarRobot": {
			    	"name"  : "sonarRobot",
			    	"description": "The sonar on the front of the robot",
			    	"value" :  0
		         },
		        "led": {
		          "name": "LED for motion",
		          "description": "The LED on the robot ",
		          "value": false,
		          "gpio": 25
		        }
		    }
        },
        "commands":{
        	"link": "/commands",
        	"description": "The set of robot moves",
        	"resources":{
        		"moves": {       			
        			"w":{ "description": "Move the robot ahead" },
        			"s":{ "description": "Move the robot backward" },
        			"h":{ "description": "Stop the robot " },
        			"a":{ "description": "Move the robot left" },
         			"d":{ "description": "Move the robot right" }
  	         	}
        	}
        } 
		}
    },
	"robotenv": {
	"link": "/robotenv",
    "description": "The robot environment.",
    "envdevices":{
	    "link": "/envdevices",
	    "resources":{       	
	 	    "sonar1": {
		    	"name" : "sonar1",
	         	"description": "The upper sonar.",
		    	"value": 0
		    },
		    "sonar2": {
		    	"name" : "sonar2",
	         	"description": "The lower sonar.",
		    	"value": 0
		    },
		    "temperature":{
	       		"name" : "temperature",
	          	"description": "An ambient temperature sensor.",
	        	"unit": "celsius",
	        	"value": 0,
	        	"gpio": 12
	      	},
	       "led": {
	          "name": "Hue Lamp",
	          "description": "A REST lamp.",
	          "value": false,
	          "ip": "https://www2.meethue.com/it-it"
	        }
        }
    }    
  }
  }
}